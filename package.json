{
  "name": "wfh-bingo",
  "version": "1.0.0",
  "description": "A react and nextjs powered bingoCard generator",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "./node_modules/.bin/webpack --mode production --env NODE_ENV=production",
    "clean": "rm -rf ./build/*",
    "deploy": "yarn build:prod && scp ./build/* dreamhost:maxescher/craft/web/bingo",
    "serve": "./node_modules/.bin/webpack-dev-server --env NODE_ENV=development --hot",
    "start": "./node_modules/.bin/webpack -w --env NODE_ENV=development"
  },
  "author": "Max Escher <max@maxescher.com>",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-brands-svg-icons": "^6.4.2",
    "@fortawesome/free-regular-svg-icons": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "postcss": "^8.4.31",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "html-webpack-plugin": "^5.5.3",
    "postcss-custom-media": "^10.0.2",
    "postcss-import": "^15.0.0",
    "postcss-loader": "^7.3.3",
    "postcss-nesting": "^12.0.1",
    "postcss-preset-env": "^9.2.0",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "browserslist": [
    "Explorer 11"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "postcss": {
    "map": false,
    "plugins": {
      "postcss-import": {},
      "postcss-preset-env": {
        "stage": 0
      }
    }
  }
}
